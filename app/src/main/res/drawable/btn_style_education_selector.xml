<?xml version="1.0" encoding="utf-8" ?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_window_focused="false" 
        android:drawable="@drawable/btn_style_education_nofocus" /> <!-- 没有焦点时的设置 -->
  <item android:state_focused="true" android:state_pressed="true" 
        android:drawable="@drawable/btn_style_education_focus" /> <!-- 非触摸模式下获得焦点并单击时的设置 -->
  <item android:state_focused="false" android:state_pressed="true" 
        android:drawable="@drawable/btn_style_education_focus" /> <!-- 触摸模式下单击时的设置  -->
  <item android:state_selected="true" 
        android:drawable="@drawable/btn_style_education_focus" /> <!-- 选中时的设置  -->
  <item android:state_focused="true" 
        android:drawable="@drawable/btn_style_education_focus" /> <!-- 获得焦点时的设置  -->
</selector> 